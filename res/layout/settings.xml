<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:text="Preferences" android:id="@+id/text1"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:textColor="#00ffff" android:textSize="25px"
			android:layout_alignParentTop="true"></TextView>
		<TextView android:text="\n Configured Distance(Km)"
			android:id="@+id/text2" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_alignParentLeft="true"
			android:textColor="#ffffff" android:layout_below="@id/text1"
			android:textSize="18px"></TextView>
		<EditText android:layout_below="@id/text2" android:text="2"
			android:id="@+id/distance" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		</EditText>
		<TextView android:text="Order By" android:id="@+id/order"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_below="@id/distance" android:layout_alignParentLeft="true"
			android:textColor="#ffffff" android:textSize="18px"></TextView>
		<Spinner android:id="@+id/sort" android:layout_width="wrap_content"
			android:layout_below="@id/distance" android:layout_alignParentRight="true"
			android:layout_height="wrap_content">
		</Spinner>
		<TextView android:text="Start up instruction"
			android:layout_below="@id/order" android:id="@+id/instruction"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_alignParentLeft="true" android:textColor="#ffffff"
			android:textSize="18px"></TextView>
		<RadioButton android:checked="true" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/view"
			android:layout_below="@id/order" android:layout_alignParentRight="true" />
		<TextView android:text="Force Start/Stop Service" android:id="@+id/invoke"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_alignParentLeft="true" android:textColor="#ffffff"
			android:layout_below="@id/instruction" android:textSize="18px"></TextView>
		<Button android:layout_height="wrap_content"
			android:layout_below="@id/invoke" android:layout_width="wrap_content"
			android:id="@+id/btn_start" android:text="Start Service" />
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/btn_stop"
			android:layout_below="@id/invoke" android:text="Stop Service" />
		<Button android:id="@+id/set" android:layout_width="60px"
			android:layout_height="45px" android:text="SAVE"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true" />
	</RelativeLayout>
</ScrollView>