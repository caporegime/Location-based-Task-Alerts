	<application android:icon="@drawable/icon1" android:label="@string/app_name">
		<uses-library android:name="com.google.android.maps" />
		<activity android:name=".LaunchActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<service android:name=".LocationService" />
		<activity android:name=".QuickAdd"></activity>
		<activity android:name=".Maptask"></activity>
		<activity android:name=".About"></activity>
		<activity android:name=".Help"></activity>
		<activity android:name=".Settings"></activity>

		<activity android:name=".Preferences" android:label="@string/set_preferences">
		</activity>
	</application>

	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
